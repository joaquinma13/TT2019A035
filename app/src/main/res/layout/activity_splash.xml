<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logoSplash"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/relEngrane"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:id="@+id/relEngrane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/engrane"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_settings_black_24dp" />

        <TextView
            android:id="@+id/aviso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/engrane"
            android:padding="7dp"
            android:text="Estamos actualizando los datos de tu aplicaciÃ³n , espera un momento..."
            android:textAlignment="center"
            android:textColor="#000000" />

    </RelativeLayout>







</RelativeLayout>
